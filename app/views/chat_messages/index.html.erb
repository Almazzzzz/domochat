<h1>Chat</h1>

<br />

<div id="message_view">
  <ul>
    <% @chat_messages.each do |chat_message| %>
      <%= sync partial: 'chat_message', resource: chat_message %>
    <% end %>
    <%= sync_new partial: 'chat_message', resource: @user.chat_messages.build, direction: :append %>
  </ul>
</div>

<br />

<%= render partial: 'form', locals: { chat_message: @user.chat_messages.build } %>

